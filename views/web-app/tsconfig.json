{
  "compilerOptions": {
    /* ---------------- Core Settings ---------------- */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,

    /* ---------------- Type Safety ---------------- */
    "strict": true,
    "noImplicitAny": false,          // relax for early development
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ---------------- Interop & Import Handling ---------------- */
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    /* ---------------- Path Aliases ---------------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ---------------- Plugins ---------------- */
    "plugins": [{ "name": "next" }]
  },

  /* ---------------- File Inclusion ---------------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
